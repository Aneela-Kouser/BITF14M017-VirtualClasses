@{
    ViewBag.Title = "Change Password";
}
@{
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";
}

<h2 class="myriad-pro-font">Change Your Password</h2>
<hr />
<br />
<div class="row tab">
    <div class="col-sm-6">
        <form method="post" action="/Teacher/ChangePasswordReq">
            <label for="pass" class="myriad-pro-font">Old Password</label>
            <input type="password" class="form-control" name="OldPassword" id="pass" placeholder="Old Password" />
            <br />
            <label for="pass" class="myriad-pro-font">New Password</label>
            <input type="password" class="form-control" name="Password" id="repass" placeholder="New Password" />
            <br />
            <label for="pass" class="myriad-pro-font">Re-enter New Password</label>
            <input type="password" class="form-control" id="reenterpass" placeholder="Re-Enter New Password" />
            <button style="margin-top:10px;margin-left:80px" type="submit" class="btn btn-default myriad-pro-font">Change Password</button>
        </form>
    </div>
</div>
